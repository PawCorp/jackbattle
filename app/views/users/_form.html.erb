<%= render Forms::RowComponent.new(name: :email, record: user, form:) do %>
  <%= form.email_field :email %>
<% end %>

<%= render Forms::RowComponent.new(name: :username, record: user, form:, variant: :small) do %>
  <%= form.text_field :username %>
<% end %>

<%= render Forms::RowComponent.new(name: :password, record: user, form:, variant: :medium) do %>
  <%= form.password_field :password %>
<% end %>

<%= render Forms::RowComponent.new(name: :password_confirmation, record: user, form:, variant: :medium) do %>
  <%= form.password_field :password_confirmation %>
<% end %>

<%= render Forms::RowComponent.new(form:) do %>
  <%= form.submit %>
<% end %>

<%= render Forms::RowComponent.new(form:) do %>
  <%= link_to t(".sign_in"), sign_in_path %>
<% end %>
